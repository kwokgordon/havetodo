<%= render 'simpleAdd' %>

<div class="panel panel-default">
  <div class="panel-heading">
  	<%= current_user.name %>'s Tasks <span class="badge"><%= current_user.tasks.count %></span>
  </div>
  <div class="panel-body"></div>
  <ul class="list-group">
	<% @tasks.each do |task| %>
        <li class="list-group-item"><%= task.name %>
        <%= link_to 'Edit', edit_task_path(task) %><span class="glyphicon glyphicon-pencil"></span>
        <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %><span class="glyphicon glyphicon-remove"></span>
        
        </li>
    <% end %>
  </ul>
</div>
