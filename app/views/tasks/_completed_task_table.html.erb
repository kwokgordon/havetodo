<div class="panel panel-default">
  <div class="panel-heading">
  	<%= task_header %> Tasks <span class="badge"><%= task_table.count %></span>
  </div>
  <div class="panel-body"></div>

  <table class="table">
	<% task_table.each do |task| %>
      <tr id="task_<%= task.id %>" class="completed">
      	<td width="5%" onmouseover="highlightTask(this)" onmouseout="unhighlightTask(this)"><img src="<%= image_path("check.png") %>" name="task" id="<%= task.id %>" onclick="toggleCheckbox(<%= task.id %>)"></td>
        <td width="85%">
		  <span class="primary_task_name"><%= link_to task.name, edit_task_path(task) %></span><br />
   	  	  <span class="completed_datetime">
   	  	  	<% if !task.completed_date.blank? %>
 	  	  	  Completed Date: <%= task.completed_date %>
   	  	  	<% end %>
   	  	  </span>
        </td>
        <td width="10%"><%= link_to 'Delete', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>  
  
</div>
