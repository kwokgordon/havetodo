<div class="panel panel-default">
  <div class="panel-heading">
  	<%= friend_header %> <span class="badge"><%= friend_table.count %></span>
  </div>
  <div class="panel-body"></div>
  
  <table class="table">
	<% friend_table.each do |friend| %>
      <tr id="friend_<%= friend.id %>">
      	<td width="20%">
      		<%= friend.friend.name %>
      	</td>
        <td width="60%">
      		<%= friend.friend.email %>
    	</td>
    	<% if status == "requested" %>
          <td width="10%">
		    <button id="friend_id" class="btn btn-default" name="friend" type="button" onclick="acceptFriend(<%= friend.friend.id %>)">
		      Accept
		    </button>          	
          </td>
          <td width="10%">
		    <button id="friend_id" class="btn btn-default" name="friend" type="button" onclick="rejectFriend(<%= friend.friend.id %>)">
		      Reject
		    </button>          	
          </td>
        <% elsif status == "pending" %>
          <td width="20%">
          	Waiting for your friend to accept
          </td>
        <% else %>
          <td width="10%">
          </td>
          <td width="10%">
		    <button id="friend_id" class="btn btn-default" name="friend" type="button" onclick="removeFriend(<%= friend.friend.id %>)">
		      Remove
		    </button>          	
          </td>
        <% end %>
      </tr>
    <% end %>
  </table>  
  
</div>
