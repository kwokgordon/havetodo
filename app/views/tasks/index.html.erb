<%= render 'simpleAdd' %>
          
<div class="panel panel-default">
  <div class="panel-heading">
  	<%= current_user.name %>'s Tasks <span class="badge"><%= current_user.tasks.count %></span>
  </div>
  <div class="panel-body"></div>

  <ul class="list-group">
	<% @tasks.each do |task| %>
        <li class="list-group-item"><%= task.name %>
        <%= link_to(edit_task_path(task)) do %>
        	Edit
<!--          <button type="button" class="btn btn-default btn-xs pull-right">Edit</button>       -->
        <% end %>
        <%= link_to task, method: :delete, data: { confirm: 'Are you sure?' } do %>
        	Delete
<!--          <button type="button" class="btn btn-default btn-xs pull-right">Delete</button>   -->
        <% end %>
        </li>
    <% end %>
  </ul>  

</div>
