<h2>Share with Friends</h2>

<% if @friends.nil? %>
You have no Friends.  Please add some friends to your <%= link_to "Friend List", friendships_path %>.
<% else %>
<ul>
	<% for user in (User.order(:name).find(@friends - @task_shared)) %>
	  <li><%= link_to user.name, task_addFriend_path(@task, user), method: :post %></li>
	<% end %>
</ul>
<% end %>


<h2>Sharing To (click the name to remove)</h2>

<ul>
	<% for user in (User.order(:name).find(@task_shared)) %>
	  <li <%= "style=\"color:#F00\"" if user = current_user %>>
	  	<%= link_to user.name, task_removeFriend_path(@task, user), method: :delete %>
	  </li>
	<% end %>
</ul>

