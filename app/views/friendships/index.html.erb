<h2>Friends</h2>

  <%= form_for @new_friend do |f| %>
    <div class="field">
      <%= f.label :email, value: "Email" %>
      <%= f.text_field :email, :autofocus => true %>
      <%= f.submit 'Friend Request', class: 'btn btn-default' %>
    </div>
  <% end %>

<ul>
  <% for friendship in @friends %>
    <li>
      <%=h friendship.friend.email %>
      (<%= link_to "remove", friendship, :method => :delete %>)
    </li>
  <% end %>
</ul>

